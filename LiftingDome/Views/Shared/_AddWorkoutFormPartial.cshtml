@model WorkoutFormModel
<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="form-group">
				<label asp-for="Title"></label>
				<input asp-for="Title" class="form-control" placeholder="Title...">
				<span asp-validation-for="Title" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description"></label>
				<textarea asp-for="Description" rows="4" class="form-control"
				placeholder="Details..."></textarea>
				<span asp-validation-for="Description" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ImageUrl"></label>
				<input asp-for="ImageUrl" class="form-control" placeholder="Your image link here...">
				<span asp-validation-for="ImageUrl" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Price"></label>
				<input asp-for="Price" class="form-control">
				<span asp-validation-for="Price" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CategoryId"></label>
				<select asp-for="CategoryId" class="form-control">
					@foreach (var category in Model.Categories)
					{
						<option value="@category.Id">@category.Name</option>
					}
				</select>
				<span asp-validation-for="CategoryId" class="small text-danger"></span>
			</div>
			<div class="text-center">
				<input class="btn btn-dark mt-3" type="submit" value="Save" style="margin:10px" />
			</div>
		</form>
		<div class="text-center">
			<a class="btn btn-dark" style="margin:5px" asp-area="" asp-controller="Workout" asp-action="Mine">To <span style="color:red">My</span> Workouts</a>
		</div>
		<div class="text-center">
			<a class="btn btn-dark" style="margin:5px; padding-top:5px" asp-area="" asp-controller="Workout" asp-action="All">To <span style="color:red">All</span> Workouts</a>
		</div>
	</div>
</div>